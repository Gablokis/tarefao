<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calcular o Dobro</title>
</head>
<body>
    <script>
        
        var numero = prompt("Digite um número inteiro:");

        
        numero = parseInt(numero);

        
        if (!isNaN(numero)) {
           
            var dobro = numero * 2;

            
            alert("O dobro de " + numero + " é " + dobro);
        } else {
            
            alert("Por favor, insira um número inteiro válido.");
        }
    </script>
</body>
</html>
